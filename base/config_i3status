general {
  colors = true
  interval = 5
}

order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

battery all {
  format = "%status %percentage %remaining"
  last_full_capacity = true
}

disk "/" {
  format = "%avail"
}

load {
  format = "%1min"
}

memory {
  format = "%used | %available"
  threshold_degraded = "1G"
  format_degraded = "MEMORY < %available"
}

tztime local {
  format = "%a %d.%m.%Y %I:%M:%S %p"
}

volume master {
  format = "Vol: %volume"
  format_muted = "Vol: muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
