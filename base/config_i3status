general {
  colors = true
  interval = 5
}

order += "battery all"
order += "volume master"
order += "load"
order += "wireless _first_"
order += "tztime local"

battery all {
  format = "%status %percentage"
  format_down = "No battery"
  status_chr = "CHR"
  status_bat = "BAT"
  status_unk = "UNK"
  status_full = "FULL"
  status_idle = "IDLE"
  last_full_capacity = true
}

volume master {
  format = "Vol: %volume"
  format_muted = "Vol: muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

load {
  format = "%1min"
}

wireless _first_ {
  format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_down = "W: down"
}

tztime local {
  format = "%a %d.%m.%Y %I:%M:%S %p"
}
